{
    "EmailSettings": {
        "Server": "localhost",
        "Port": "25",
        "DefaultEmailAddress":  "no-reply@localhost.com"
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "LeaveManagementSystemWebContextConnection": "Server=(localdb)\\mssqllocaldb;Database=LeaveManagementSystem;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=false"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341/"
                }
            }
        ]
    }
}