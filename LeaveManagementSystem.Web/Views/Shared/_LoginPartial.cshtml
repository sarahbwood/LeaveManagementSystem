@using LeaveManagementSystem.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
   <li class="nav-item dropdown">
       <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
           <img src="~/images/profile/profile_picture-navajowhite.svg" width="45" height="45" class="rounded-circle" />
       </a>
       <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
           <div class="message-body">
               <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="d-flex align-items-center gap-2 dropdown-item">
                   <i class="ti ti-user fs-6"></i>
                   <p class="mb-0 fs-3">My Profile</p>
               </a>
               <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                   <button id="logout" type="submit" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</button>
               </form>
           </div>
       </div>
   </li>
}
else
{
    <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/profile/profile_picture-navajowhite.svg" width="45" height="45" class="rounded-circle"/>
            </a>
            <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="navbarDropdown">
                <div class="message-body">
                    <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">
                        <i class="ti ti-user-plus fs-6"></i>
                        Register
                    </a>

                    <form id="login" asp-area="Identity" asp-page="/Account/Login">
                        <button class="btn btn-outline-primary mx-3 mt-2 d-block" type="submit">Login</button>
                    </form>   
                </div>  
            </div>
    </li>
}
</ul>
