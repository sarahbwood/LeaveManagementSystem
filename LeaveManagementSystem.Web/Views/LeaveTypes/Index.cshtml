@using LeaveManagementSystem.Application.Models.LeaveTypes
@model IEnumerable<LeaveTypeReadOnlyVM>

@{
    ViewData["Title"] = "Leave Types";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeaveTypeId" class="btn btn-warning">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.LeaveTypeId" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.LeaveTypeId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
